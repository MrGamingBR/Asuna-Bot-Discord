{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
